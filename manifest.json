{
  "manifest_version": 3,
  "name": "No_More_YouTube_Shorts",
  "version": "1.0",
  "description": "Hides Shorts content from the YouTube homepage",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/NoYoutubeShorts16.png",
    "48": "icons/NoYoutubeShorts48.png",
    "128": "icons/NoYoutubeShorts128.png"
  }
}
